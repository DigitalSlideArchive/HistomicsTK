.g-header-wrapper
    .g-app-title HistomicsTK

    .g-current-user-wrapper
        .g-user-text
          if (user)
            a(data-toggle="dropdown", data-target="#g-user-action-menu")
              | #{user.get('firstName')} #{user.get('lastName')}
              i.icon-down-open
            #g-user-action-menu.dropdown
              ul.dropdown-menu(role="menu")
                li(role="presentation")
                  a.g-logout
                    i.icon-logout
                    | Log out
          else
            a.g-register Register
            |  or
            a.g-login  Log In
              i.icon-login
    .g-clear-both
