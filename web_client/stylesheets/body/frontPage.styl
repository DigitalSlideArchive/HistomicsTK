.h-frontpage-section-divider
  height 12px
  background-color white

.h-frontpage-section
  padding 80px 18% 100px
  text-align center

  .h-big-icon-container
    font-size 46px
    margin-bottom 10px

  &.first
    background-color #5a8b45
    background linear-gradient(top left, #7adcf9 0, #e49344)
    color white

  &.second
    background-color #7554ed
    background linear-gradient(top right, #70767b 0, #a9efba)
    color white

  h1
    text-transform uppercase
    font-size 32px
    font-weight bold

  p
    margin-top 20px
    font-size 18px

.h-frontpage-button
  border-radius 6px
  margin-top 20px
  font-size 19px
  font-weight bold
  display inline-block
  padding 10px 11px 10px 18px
  cursor pointer

  i
    margin-left 8px

.histomicstk-body .h-panel-title.s-panel-title
  white-space nowrap
  max-width 90%
