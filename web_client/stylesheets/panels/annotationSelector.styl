.h-annotation
    border-radius 3px
    span
        cursor pointer
    .h-float-left
        float left
        margin-right 0.5em

    .h-annotation-right
        float right

    a
        color #333
    .h-annotation-name
        width 180px
        display inline-block
        text-overflow ellipsis
        white-space nowrap
        overflow hidden

.h-annotation.h-active-annotation
  background-color #c5cae9 !important

.h-annotation.h-highlight-annotation
  background-color #ccc

.h-create-annotation
  float right

.h-annotation:hover
  background-color #eee

.h-hide-show-buttons
  margin-bottom 5px
