<?xml version="1.0" encoding="UTF-8"?>
<executable>
  <category>HistomicsTK</category>
  <title>Performs Adaptive Color Deconvolution</title>
  <description>Uses sparse non-negative matrix factorization to adaptively deconvolve a given RGB image into intensity images representing distinct stains.</description>
  <version>0.1.0</version>
  <documentation-url>https://digitalslidearchive.github.io/HistomicsTK/</documentation-url>
  <license>Apache 2.0</license>
  <contributor>Deepak Roy Chittajallu (Kitware), Neal Siekierski (Kitware)</contributor>
  <acknowledgements>This work is part of the HistomicsTK project.</acknowledgements>
  <parameters>
    <label>IO</label>
    <description>Input/output parameters.</description>
    <image>
      <name>inputImageFile</name>
      <label>Input Image</label>
      <channel>input</channel>
      <index>0</index>
      <description>Input image to be deconvolved</description>
    </image>
    <image>
      <name>outputStainImageFile_1</name>
      <label>Output Image of Stain 1</label>
      <description>Output Image of Stain 1</description>
      <channel>output</channel>
      <index>1</index>
    </image>
    <image>
      <name>outputStainImageFile_2</name>
      <label>Output Image of Stain 2</label>
      <description>Output Image of Stain 2</description>
      <channel>output</channel>
      <index>2</index>
    </image>
    <image>
      <name>outputStainImageFile_3</name>
      <label>Output Image of Stain 3</label>
      <description>Output Image of Stain 3</description>
      <channel>output</channel>
      <index>3</index>
    </image>
    <string-enumeration>
      <name>stain_1</name>
      <label>stain-1</label>
      <description>Name for initial estimate of color of stain-1</description>
      <channel>input</channel>
      <longflag>stain_1</longflag>
      <element>hematoxylin</element>
      <element>eosin</element>
      <element>dab</element>
      <element>custom</element>
      <default>hematoxylin</default>
    </string-enumeration>
    <double-vector>
      <longflag>stain_1_vector</longflag>
      <label>stain-1 custom vector</label>
      <default>-1,-1,-1</default>
      <description>Custom value for initial estimate of stain-1</description>
    </double-vector>
    <string-enumeration>
      <name>stain_2</name>
      <label>stain-2</label>
      <description>Name for initial estimate of color of stain-2</description>
      <channel>input</channel>
      <longflag>stain_2</longflag>
      <element>hematoxylin</element>
      <element>eosin</element>
      <element>dab</element>
      <element>custom</element>
      <default>eosin</default>
    </string-enumeration>
    <double-vector>
      <longflag>stain_2_vector</longflag>
      <label>stain-2 custom vector</label>
      <default>-1,-1,-1</default>
      <description>Custom value for initial estimate of stain-2</description>
    </double-vector>
    <double>
      <name>beta</name>
      <label>Beta</label>
      <description>A parameter to control sparsity of stain concentrations</description>
      <longflag>beta</longflag>
      <default>0.5</default>
    </double>
  </parameters>
</executable>
